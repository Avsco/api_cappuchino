{
	"compilerOptions": {
		"esModuleInterop": true,
		"module": "CommonJS",
		"moduleResolution": "Node",
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": ".",
		"removeComments": true,
		"strict": true,
		"target": "es6",
		"sourceMap": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true
	},
	"exclude": ["node_modules", "scripts"]
}
